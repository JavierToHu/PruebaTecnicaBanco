@model Negocio.Persona

@{
    ViewBag.Title = "FormsPersona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    @using (Html.BeginForm("FormsPersona", "Persona", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-12">
                <h1 style="font-weight: bold; margin-bottom: 20px; ">Ingrese datos de la persona</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="col-form-label">
                    @Html.LabelFor(model => model.Nombre, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @type = "text" })
                </div>
                <div class="col-form-label">
                    @Html.LabelFor(model => model.ApellidoPaterno, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control", @type = "text" })
                </div>
                <div class="col-form-label">
                    @Html.LabelFor(model => model.ApellidoMaterno, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control", @type = "text" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="col-form-label">
                    <label class="fw-bold">Tipos de Persona Fiscal</label>
                    @*@Html.DropDownListFor(model => model.tipoPersonaFiscal.IdTipoPersonaFisica, new SelectList(Model.tipoPersonaFiscal.TiposPersonasFiscal, "IdTipoPersonaFisica", "NombreTipoPersonaFisica"), "Selecciona...", new { @class = "form-control" })*@
                    @Html.DropDownListFor(model => model.tipoPersonaFiscal.IdTipoPersonaFisica, (SelectList)ViewBag.ListaTiposPersonaFiscal, "Seleccione Tipo Persona Fiscal", new { @class = "form-control" })
                </div>
                <div class="col-form-label">
                    <label class="fw-bold">Pais de Origen</label>
                    @*@Html.DropDownListFor(model => model.paisOrigen.IdPaisOrigen, new SelectList(Model.paisOrigen.Paises, "IdPaisOrigen", "NombrePaisOrigen"), "Selecciona...", new { @class = "form-control" })*@
                    @Html.DropDownListFor(model => model.paisOrigen.IdPaisOrigen, (SelectList)ViewBag.ListaPaisOrigen, "Seleccione País de Origen", new { @class = "form-control" })
                </div>
                <div class="col-form-label">
                    <label class="fw-bold">Sexo</label>
                    @*@Html.DropDownListFor(model => model.sexo.IdSexo, new SelectList(Model.sexo.Sexos, "IdSexo", "NombreSexo"), "Selecciona...", new { @class = "form-control" })*@
                    @Html.DropDownListFor(model => model.sexo.IdSexo, (SelectList)ViewBag.ListaSexo, "Seleccione Sexo", new { @class = "form-control" })
                </div>
            </div>


            <div class="col-lg-4">
                <div class="col-form-label">
                    @Html.LabelFor(model => model.CURP, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.CURP, new { @class = "form-control", @type = "text" })
                </div>
                <div class="col-form-label">
                    @Html.LabelFor(model => model.RFC, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.RFC, new { @class = "form-control", @type = "text" })
                </div>
                <div class="col-form-label">
                    @Html.LabelFor(model => model.FechaNacimiento, new { @class = "fw-bold" })
                    @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", @type = "date" })
                </div>
            </div>
        </div>

        <hr style="border:none; border-top: 3px solid black; margin:20px 0; " />

        @Html.HiddenFor(model => model.IdPersona);

        if (Model.IdPersona != 0)
        {
            <div class="row">
                <div class="col-md-1">
                    <button type="submit" class="btn btn-success">Actualizar</button>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-1">
                    <button type="submit" class="btn btn-success">Agregar</button>
                </div>
            </div>
        }

    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
        alert("@TempData["SuccessMessage"]");
        </script>
    }
</body>
</html>